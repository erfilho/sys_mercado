{{#if auth}}
  <nav id="navbar" class="navbar bg-purple-200 px-3 mb-1 w-100">
    <a class="navbar-brand" href="#">SysMercado</a>
    <ul id="main-navbar" class="nav nav-pills">
      <li class="nav-item">
        <a class="nav-link disabled" href="#"> {{usuario.login}} </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/login">Logout</a>
      </li>
    </ul>
  </nav>
  <form class="container-fluid w-50 d-flex flex-column gap-2">
    <p class="fs-4 text-center">Cadastro de Clientes</p>
    <div class="form-group w-50">
      <label for="cpf_cliente">CPF/CNPJ:</label>
      <input
        type="text"
        class="form-control"
        id="cpf_cliente"
        placeholder="CPF/CNPJ"
      />
    </div>
    <div class="form-group w-75">
      <label for="nome_cliente">Nome completo</label>
      <input
        type="text"
        class="form-control"
        id="nome_cliente"
        placeholder="Nome"
      />
    </div>

    <div class="form-group w-25">
      <label for="celular"> Celular </label>
      <input type="text" class="form-control" id="celular" placeholder="(DDD) XXXXX-XXXX" />
    </div>

    <div class="w-100 d-flex flex-row gap-2">
      <div class="form-group w-75">
        <label for="endereco"> Endereço </label>
        <input type="text" class="form-control" id="endereco" />
      </div>
      <div class="form-group w-25">
        <label for="endereco"> Número </label>
        <input type="text" class="form-control" id="numero" />
      </div>
    </div>

    <div class="w-100 d-flex flex-row gap-2">
      <div class="form-group w-50">
        <label for="endereco"> Bairro </label>
        <input type="text" class="form-control" id="endereco" />
      </div>
      <div class="form-group w-50">
        <label for="endereco"> Complemento </label>
        <input type="text" class="form-control" id="numero" />
      </div>
    </div>

    <div class="w-100 d-flex flex-row gap-2">
      <div class="form-group w-75">
        <label for="endereco"> Cidade </label>
        <input type="text" class="form-control" id="endereco" />
      </div>
      <div class="form-group w-25">
        <label for="estado"> Estado </label>
        <select class="form-control" id="estado">
          {{#each estados}}
            <option value="{{this.uf}}"> {{this.estado}} </option>
          {{/each}}
        </select>
      </div>
    </div>
    </div>
    <div class="d-flex flex-row justify-content-end gap-3">
      <button type="submit" class="btn btn-success">Cadastrar</button>
      <button type="clean" class="btn btn-secondary">Limpar</button>
    </div>
    </form>
  </div>
{{else}}
  <p> Login please </p>
{{/if}}