<!-- Botão para abrir a tela de confirmação -->
<button onclick="openConfirmation()">Deletar Cliente</button>

<!-- Tela de confirmação -->
<div id="confirmation" style="display: none;">
  <p>Tem certeza que deseja deletar o cliente?</p>
  <form action="/deletarCliente" method="POST">
    <input type="hidden" name="clienteId" value="{{cliente.id}}">
    <button type="submit">Confirmar</button>
    <button type="button" onclick="closeConfirmation()">Cancelar</button>
  </form>
</div>


