{{> navBar tela="Edição de produtos"}}
  <form class="container-fluid w-50 d-flex flex-column gap-2" method="post" action="/produtos/edit/{{produto.id}}">
    <p class="fs-4 text-center">Edição de Produto</p>
    <div class="form-group w-25">
      <label for="cod_produto">Código do produto</label>
      <input
        type="number"
        class="form-control"
        id="cod_produto"
        name="cod_produto"
        placeholder="Código"
        value="{{produto.cod}}"
      />
    </div>
    <div class="form-group w-75">
      <label for="cod_produto">Nome do produto</label>
      <input
        type="text"
        class="form-control"
        id="nome_produto"
        name="nome_produto"
        placeholder="Nome"
        value="{{produto.name}}"
      />
    </div>

    <div class="row d-flex flex-row w-100">
      <div class="col-6">
        <label for="categoria_produto"> Categoria </label>
        <select class="form-control" id="categoria_produto" name="categoria_produto">
            {{#each categorias}}
              <option class="text-capitalize form-control" id="categoria_produto" value="{{this.cod}}">{{this.name}}</option>
            {{/each}}
        </select>
      </div>
      <div
        class="col-auto d-flex flex-column align-self-end align-items-end h-100"
      >
        <button
          type="button"
          class="btn btn-primary"
          data-bs-toggle="modal"
          data-bs-target="#modalCategory"
        >
          Cadastrar categoria
        </button>
      </div>
    </div>  

    <div class="form-group w-25">
      <label for="cod_produto">Valor</label>
      <input type="text" class="form-control" id="valor_produto" value="{{produto.value}}" name="valor_produto" />
    </div>

    <div class="form-group w-25">
      <label for="cod_produto">Estoque atual </label>
      <input type="text" class="form-control" id="estoque_produto" value="{{produto.stock}}" name="estoque_produto" />
    </div>

    <div class="form-group w-100">
      <label for="cod_produto">Descrição</label>
      <textarea
        type="textarea"
        class="form-control"
        id="descricao_produto"
        name="descricao_produto"
        value="{{produto.description}}"
        rows="3"
      >{{produto.description}}</textarea>
    </div>
    <div class="d-flex flex-row justify-content-end gap-3">
      <button type="submit" class="btn btn-success"> Salvar </button>
      <a class="btn btn-secondary" href="/produtos/">Cancelar</a>
    </div>
    </form>
  </div>
{{> cadastroCategoria}}