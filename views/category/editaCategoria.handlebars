{{> navBar tela="Edição de categorias"}}
  <form class="container-fluid w-50 d-flex flex-column gap-2" method="post" action="/categorias/edit/{{categoria.id}}">
    <p class="fs-4 text-center">Cadastro de Categorias</p>
    <div class="form-group w-25">
      <label for="cod_categoria">Código da Categoria</label>
      <input
        type="text"
        class="form-control"
        id="cod_categoria"
        name="cod_categoria"
        placeholder="Código"
        value="{{categoria.cod}}"
      />
    </div>
    <div class="form-group w-75">
      <label for="nome_categoria">Nome da Categoria</label>
      <input
        type="text"
        class="form-control"
        id="nome_categoria"
        name="nome_categoria"
        placeholder="Nome"
        value="{{categoria.name}}"
      />
    </div>

    <div class="d-flex flex-row justify-content-end gap-3">
      <button type="submit" class="btn btn-success"> Salvar </button>
      <a class="btn btn-secondary" href="/categorias/">Cancelar</a>
    </div>
    </form>
  </div>