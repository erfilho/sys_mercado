  <form class="container-fluid w-50 d-flex flex-column gap-2" action="/clientes/edit/{{cliente.id}}" method="post">
    <p class="fs-4 text-center"> </p>
    <div class="form-group w-50">
      <label for="cpf_cliente">CPF/CNPJ:</label>
      <input
        type="text"
        class="form-control"
        id="cpf_cliente"
        name="cpf_cliente"
        value="{{cliente.cpf}}"
        placeholder="CPF/CNPJ"
      />
    </div>
    <div class="form-group w-75">
      <label for="nome_cliente">Nome completo</label>
      <input
        type="text"
        class="form-control"
        id="nome_cliente"
        name="nome_cliente"
        value="{{cliente.name}}"
        placeholder="Nome"
      />
    </div>

    <div class="form-group w-25">
      <label for="celular"> Celular </label>
      <input type="text" class="form-control" id="celular" name="celular" value="{{cliente.phone}}" placeholder="(DDD) XXXXX-XXXX" />
    </div>

    <div class="w-100 d-flex flex-row gap-2">
      <div class="form-group w-75">
        <label for="endereco"> Logradouro </label>
        <input type="text" class="form-control" id="endereco" value="{{cliente.street}}" name="endereco" />
      </div>
      <div class="form-group w-25">
        <label for="endereco"> NÃºmero </label>
        <input type="text" class="form-control" id="numero" value="{{cliente.number}}" name="numero" />
      </div>
    </div>

    <div class="w-100 d-flex flex-row gap-2">
      <div class="form-group w-50">
        <label for="endereco"> Bairro </label>
        <input type="text" class="form-control" id="bairro" value="{{cliente.neighbourhood}}" name="bairro" />
      </div>
      <div class="form-group w-50">
        <label for="endereco"> Complemento </label>
        <input type="text" class="form-control" id="complemento" value="{{cliente.additional_info}}" name="complemento" />
      </div>
    </div>

    <div class="w-100 d-flex flex-row gap-2">
      <div class="form-group w-75">
        <label for="endereco"> Cidade </label>
        <input type="text" class="form-control" id="cidade" value="{{cliente.city}}" name="cidade" />
      </div>
      <div class="form-group w-25">
        <label for="estado"> Estado </label>
        <select class="form-control" id="estado" name="estado">
          
          <option value="{{cliente.state}}"> {{cliente.state}} </option>
          {{#each estados}}
              <option value="{{this.estado}}"> {{this.estado}} </option>
          {{/each}}
        </select>
      </div>
    </div>
