{{> navBar tela="Edição de usuários"}}
  <form class="container-fluid w-50 d-flex flex-column gap-2" action="/users/edit/" method="post">
    <p class="fs-4 text-center">Edição de Usuário</p>

    <div class="form-group w-50">
      <label for="cpf_usuario">CPF/CNPJ:</label>
      <input
        type="text"
        class="form-control"
        id="cpf_usuario"
        name="cpf_usuario"
        placeholder="CPF/CNPJ"
        value="{{user.cpf}}"
      />
    </div>

    <div class="form-group w-75">
      <label for="nome_usuario">Nome completo</label>
      <input
        type="text"
        class="form-control"
        id="nome_usuario"
        name="nome_usuario"
        placeholder="Nome"
        value="{{user.name}}"
      />
    </div>
    
    <div class="form-group w-50">
      <label for="cpf_usuario"> Usuário de acesso </label>
      <input
        type="text"
        class="form-control"
        id="usuario"
        name="usuario"
        placeholder="Usuário de acesso"
        value="{{user.user}}"
      />
    </div>
    
    <div class="form-group w-50">
      <label for="cpf_usuario">Senha de acesso:</label>
      <input
        type="password"
        class="form-control"
        id="senha_usuario"
        name="senha_usuario"
        placeholder="senha de acesso"
        value="{{user.password}}"
      />
    </div>

    
    </div>
    <div class="d-flex flex-row justify-content-end gap-3">
      <button type="submit" class="btn btn-success">Salvar</button>
      <a class="btn btn-secondary" href="/">Cancelar</a>
    </div>
    </form>
  </div>