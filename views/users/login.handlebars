<div class="m-0 p-0 row min-vh-100 h-100 w-100 bg-purple-300">
  <div
    class="m-0 p-0 col-sm-12 col-xs-12 col-lg-12 d-flex flex-row flex-wrap h-100 justify-content-center align-items-center rounded rounded-5"
  >
    <div
      class="col-xs-12 col-sm-12 col-md-6 col-lg-5 col-xl-4 rounded-start-5 h-75 bg-body-tertiary d-flex flex-column align-items-center justify-content-center"
    >
      <p class="w-100 text-center fs-2"> Bem-vindo! </p>
      <p class="w-100 text-center fs-5">
        Caso você ainda não tenha cadastro, clique aqui!
      </p>
      <div class="d-flex gap-3 col-6">
        <a
          href="/users/add"
          class="text-center text-decoration-none bg-purple-400 col-12 p-2 rounded btnPurpleHover border border-dark" id="button"
        >Cadastro</a>
      </div>

    </div>
    <div
      class="col-sm-12 col-md-6 col-lg-5 col-xl-4 col-12 h-75 rounded-end-5 bg-body-secondary p-5 d-flex flex-column justify-content-center align-items-center"
    >
      <div
        class="h-100 col-xs-12 col-sm-12 col-md-10 col-lg-8 col-12 d-flex flex-column justify-content-center"
      >
        <header
          class="w-100 d-flex flex-column justify-content-center align-content-center align-items-center"
        >
          <img
            src="/assets/images/favicon.svg"
            alt="Logo"
            class="img-fluid w-25 mt-5"
          />
        </header>
        <form
          class="w-100 d-flex flex-column px-5 gap-2 align-items-center mt-5"
          action="/users/login"
          method="post"
        >
          <label for="user" class="form-label w-100">
            Digite seu usuário:
          </label>
          <input
            type="text"
            name="user"
            id="user_input"
            class="form-control"
            placeholder="Usuário"
          />
          <label for="password" class="form-label w-100">
            Digite sua senha:
          </label>
          <input
            type="password"
            name="password"
            id="password_input"
            class="form-control"
            placeholder="Senha"
          />
          <input type="submit" value="Login" class="btn btn-primary w-50" id="button"/>
          {{#if messages}}
            {{#if messages.message}}
              <div class="alert alert-danger text-center w-100" role="alert">
                {{messages.message}}
              </div>
            {{/if}}
          {{/if}}
        </form>
      </div>
    </div>
  </div>
</div>